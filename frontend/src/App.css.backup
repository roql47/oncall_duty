/* ?∏Ïä§?ÄÍ∑∏Îû® ?§Ì????àÏù¥?ÑÏõÉ */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  background-color: #fafafa;
  color: #262626;
}

.App {
  height: 100vh;
  display: flex;
}

/* Ï¢åÏ∏° ?¨Ïù¥?úÎ∞î - ?∏Ïä§?ÄÍ∑∏Îû® ?§ÎπÑÍ≤åÏù¥???§Ì???*/
.sidebar-left {
  width: 244px;
  background-color: white;
  border-right: 1px solid #dbdbdb;
  padding: 24px 12px;
  position: fixed;
  height: 100vh;
  overflow-y: auto;
}

.logo-section {
  margin-bottom: 32px;
  padding: 0 12px;
}

.logo-section h1 {
  font-size: 24px;
  font-weight: 600;
  color: #262626;
  margin-bottom: 8px;
}

.logo-section p {
  font-size: 14px;
  color: #8e8e8e;
  line-height: 1.4;
}

.nav-menu {
  list-style: none;
  margin-bottom: 24px;
}

.nav-item {
  margin-bottom: 8px;
}

.nav-button {
  width: 100%;
  padding: 12px 16px;
  background: none;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #262626;
  transition: background-color 0.2s;
  text-align: left;
}

.nav-button:hover {
  background-color: #f8f9fa;
}

.nav-button.active {
  background-color: #f0f8ff;
  color: #0095f6;
  font-weight: 600;
}

.nav-button svg {
  margin-right: 16px;
  width: 24px;
  height: 24px;
  color: #262626;
}
.nav-button.active svg {
  color: #0095f6;
}

/* Î©îÏù∏ Ïª®ÌÖêÏ∏??ÅÏó≠ */
.main-content {
  flex: 1;
  margin-left: 244px;
  margin-right: 300px;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* ?ÅÎã® ?§Îçî */
.chat-header {
  background-color: white;
  border-bottom: 1px solid #dbdbdb;
  padding: 16px 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 20px;
  font-weight: 600;
  color: #262626;
}

.update-section {
  display: flex;
  align-items: center;
  gap: 12px;
}

.update-button {
  background-color: #0095f6;
  border: none;
  color: white;
  padding: 8px 16px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 600;
  transition: background-color 0.2s;
}

.update-button:hover {
  background-color: #0081d6;
}

.update-button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
  opacity: 0.7;
}

.progress-container {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: 12px;
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 6px;
  background: #e1e8ed;
  border-radius: 3px;
  overflow: hidden;
  box-shadow: inset 0 1px 2px rgba(0,0,0,0.1);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(45deg, #0095f6, #00d4ff);
  transition: width 0.3s ease;
  border-radius: 3px;
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: progress-shimmer 1.5s infinite;
}

@keyframes progress-shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.progress-text {
  color: #666;
  font-size: 12px;
  font-weight: 500;
  text-align: center;
}

.gemini-toggle {
  background-color: #f8f9fa;
  border: 1px solid #dbdbdb;
  color: #262626;
  padding: 8px 16px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.2s;
}

.gemini-toggle.active {
  background-color: #0095f6;
  color: white;
  border-color: #0095f6;
}

.gemini-toggle:hover {
  background-color: #f0f8ff;
}

.update-status {
  font-size: 14px;
  color: #0095f6;
  background-color: #f0f8ff;
  padding: 6px 12px;
  border-radius: 6px;
  border: 1px solid #e1f5fe;
}

/* ?àÏ†ú ÏßàÎ¨∏ ?πÏÖò */
.examples-container {
  background-color: white;
  border-bottom: 1px solid #dbdbdb;
  padding: 16px 24px;
}

.examples-container p {
  margin-bottom: 12px;
  font-size: 14px;
  color: #8e8e8e;
  font-weight: 500;
}

.examples {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.example-question {
  background-color: #f8f9fa;
  border: 1px solid #dbdbdb;
  border-radius: 20px;
  padding: 8px 16px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s;
  color: #262626;
}

.example-question:hover {
  background-color: #0095f6;
  color: white;
  border-color: #0095f6;
}

/* Ï±ÑÌåÖ ?ÅÏó≠ */
.chat-body {
  flex: 1;
  padding: 24px;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  background-color: #fafafa;
}

.chat-bubble {
  max-width: 60%;
  padding: 12px 16px;
  margin-bottom: 16px;
  border-radius: 18px;
  position: relative;
  word-wrap: break-word;
  line-height: 1.4;
}

.bot {
  align-self: flex-start;
  background-color: white;
  color: #262626;
  border: 1px solid #dbdbdb;
  border-bottom-left-radius: 6px;
}

.user {
  align-self: flex-end;
  background-color: #0095f6;
  color: white;
  border-bottom-right-radius: 6px;
}

.loading {
  background-color: white;
  border: 1px solid #dbdbdb;
  padding: 16px;
  border-radius: 18px;
  border-bottom-left-radius: 6px;
}

.typing-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
}

.typing-indicator span {
  height: 8px;
  width: 8px;
  background-color: #8e8e8e;
  border-radius: 50%;
  display: block;
  animation: blink 1.4s infinite both;
}

.typing-indicator span:nth-of-type(1) {
  animation-delay: -0.32s;
}

.typing-indicator span:nth-of-type(2) {
  animation-delay: -0.16s;
}

.typing-indicator span:nth-of-type(3) {
  animation-delay: 0s;
}

@keyframes blink {
  0%, 80%, 100% {
    opacity: 0.3;
  }
  40% {
    opacity: 1;
  }
}

/* ?ÖÎ†• ?ÅÏó≠ */
.chat-input-area {
  background-color: white;
  border-top: 1px solid #dbdbdb;
  padding: 16px 24px;
  display: flex;
  gap: 12px;
  align-items: center;
}

.chat-input-area input {
  flex: 1;
  padding: 12px 16px;
  border: 1px solid #dbdbdb;
  border-radius: 22px;
  font-size: 14px;
  outline: none;
  transition: border-color 0.2s;
}

.chat-input-area input:focus {
  border-color: #0095f6;
}

.chat-input-area input::placeholder {
  color: #8e8e8e;
}

.chat-input-area button {
  background-color: #0095f6;
  border: none;
  color: white;
  padding: 12px 20px;
  border-radius: 22px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 600;
  transition: background-color 0.2s;
  min-width: 80px;
}

.chat-input-area button:hover:not(:disabled) {
  background-color: #0081d6;
}

.chat-input-area button:disabled {
  background-color: #dbdbdb;
  cursor: not-allowed;
}

/* ?∏Ïä§?ÄÍ∑∏Îû® DM ?§Ì????ÑÏÜ° Î≤ÑÌäº */
.send-button {
  background: linear-gradient(45deg, #833ab4, #fd1d1d, #fcb045) !important;
  border: none !important;
  border-radius: 50% !important;
  width: 48px !important;
  height: 48px !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 !important;
  min-width: auto !important;
  cursor: pointer;
  transition: all 0.2s;
  box-shadow: 0 4px 12px rgba(131, 58, 180, 0.4);
}

.send-button:hover:not(:disabled) {
  transform: scale(1.05);
  box-shadow: 0 6px 16px rgba(131, 58, 180, 0.6);
  background: linear-gradient(45deg, #a24dbd, #ff3030, #ffcc55) !important;
}

.send-button:disabled {
  background: #dbdbdb !important;
  cursor: not-allowed !important;
  transform: none !important;
  box-shadow: none !important;
}

.send-button svg {
  display: block;
  transform: rotate(45deg);
}

/* ?∞Ï∏° ?¨Ïù¥?úÎ∞î */
.sidebar-right {
  width: 300px;
  background-color: white;
  border-left: 1px solid #dbdbdb;
  padding: 24px;
  position: fixed;
  right: 0;
  height: 100vh;
  overflow-y: auto;
}

.info-section {
  margin-bottom: 32px;
}

.info-section h3 {
  font-size: 16px;
  font-weight: 600;
  color: #262626;
  margin-bottom: 16px;
}

.info-card {
  background-color: #f8f9fa;
  border: 1px solid #dbdbdb;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
}

.info-card h4 {
  font-size: 14px;
  font-weight: 600;
  color: #262626;
  margin-bottom: 8px;
}

.info-card p {
  font-size: 13px;
  color: #8e8e8e;
  line-height: 1.4;
}

/* Î∞òÏùë???îÏûê??*/
@media (max-width: 1200px) {
  .sidebar-right {
    display: none;
  }
  
  .main-content {
    margin-right: 0;
  }
}

@media (max-width: 768px) {
  .sidebar-left {
    width: 72px;
    padding: 16px 8px;
  }
  
  .logo-section h1,
  .logo-section p {
    display: none;
  }
  
  .nav-button span {
    display: none;
  }
  
  .nav-button svg {
    margin-right: 0;
  }
  
  .main-content {
    margin-left: 72px;
  }
  
  .chat-header {
    padding: 12px 16px;
  }
  
  .header-title {
    font-size: 18px;
  }
  
  .update-section {
    gap: 8px;
  }
  
  .update-button,
  .gemini-toggle {
    padding: 6px 12px;
    font-size: 12px;
  }
  
  .examples-container {
    padding: 12px 16px;
  }
  
  .chat-body {
    padding: 16px;
  }
  
  .chat-bubble {
    max-width: 80%;
  }
  
  .chat-input-area {
    padding: 12px 16px;
  }
}

@media (max-width: 480px) {
  .sidebar-left {
    display: none;
  }
  
  .main-content {
    margin-left: 0;
  }
  
  .chat-header {
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
  }
  
  .update-section {
    width: 100%;
    justify-content: space-between;
  }
  
  .examples {
    justify-content: center;
  }
  
  .chat-bubble {
    max-width: 90%;
  }
} 
